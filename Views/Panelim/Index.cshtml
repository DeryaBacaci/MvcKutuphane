@model MvcKutuphane.Models.Entity.TBLUYELER
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanelim.cshtml";
}

<h2>Kütüphane Üye Profil Bilgileri</h2>


@using (Html.BeginForm("Index2", "Panelim", FormMethod.Post))
{

    <table class="table table-hover" style="margin-top:30px">
        <tr>
            <td>
                <label style="font-weight:bold">Mail. Adresi:</label> @HttpContext.Current.User.Identity.Name
                @*Geçerli Kullanıcı Kimliği  İsim anlamı taşır*@
            </td>
        </tr>

        <tr>
            <td>

                @Html.TextBoxFor(x => x.AD, new { @class = "form-control" })
                <!--<label style="font-weight:bold">Ad:</label>-->    @*@TempData["Ad"].ToString()*@
            </td>
        </tr>
        <tr>
            <td>

                @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control" })
                <!--<label style="font-weight:bold">Soyad:</label>-->    @*@TempData["Soyad"].ToString()*@
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bold">Kullanıcı Adı:</label>
                @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control" })
                <!--<label style="font-weight:bold">Kullanıcı Adı:</label>-->    @*@TempData["KullanıcıAdı"].ToString()*@
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bold">Şifre:</label>
                @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control" })

                @*<label style="font-weight:bold">Şifre:</label>   <input type="text" class="form-control"
                value="@TempData[" Sifre"].ToString()" name="SIFRE" />*@
            </td>


        </tr>

        <tr>
            <td>
                <label style="font-weight:bold">Okul:</label>
                @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control" })
                @*<label style="font-weight:bold">Okul:</label><label style="font-weight:bold"></label>    @TempData["Okul"].ToString()*@
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bold">Fotoğraf Linki:</label>
                @Html.TextBoxFor(x => x.FOTOGRAFI, new { @class = "form-control" })
            </td>
        </tr>
        <tr>
            <td>
                <label style="font-weight:bold">Telefon:</label>
                @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control" })
            </td>
        </tr>

        <tr>
            <td>
                <button class="btn btn-warning">Bilgilerimi Güncelle</button>
            </td>
        </tr>
       
    </table>
    }