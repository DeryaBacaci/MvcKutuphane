@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayısı</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom:25px;margin-top:15px">
        @*<input type="text" class="form-control" placeholder="aramak istediğiniz kitap adını giriniz..." />*@
        <b>Aranacak Kitap Adını Girin: </b>  &nbsp; @Html.TextBox("p")
        <input type="submit"  value="Ara"/>

    </div>
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kategori</th>
        <th>Basım Yılı</th>
        <th>Yayın Evi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <th>@k.ID</th>
            <td>@k.AD</td>
            <td>@k.TBLYAZAR.AD  @k.TBLYAZAR.SOYAD</td>
            <td>@k.TBLKATEGORI.AD</td>
            <td>@k.BASIMYIL</td>
            <td>@k.YAYINEVI</td>
            <td>@k.SAYFA</td>
            <td>@k.DURUM</td>
            <td><a href="/Kitap/KitapSil/@k.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Kitap/KitapGetir/@k.ID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>

    }
</table>
<a href="/Kitap/KitapEkle/" class="btn btn-info">Yeni Kitap Ekle</a>
