@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model  PagedList.IPagedList<TBLKATEGORI>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kategori İşlemleri</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>KATEGORI ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var ktg in Model)
    {
        <tr>
            <th>@ktg.ID</th>
            <td>@ktg.AD</td>
            <td><a href="/Kategori/KategoriSil/@ktg.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Kategori/KategoriGetir/@ktg.ID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }
    <a href="/Kategori/KategoriEkle" class="btn btn-primary">Yeni Kategori Ekle</a>
</table>
@Html.PagedListPager((IPagedList)Model,sayfa=>Url.Action("Index", new {sayfa}))