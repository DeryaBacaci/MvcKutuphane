
@{
    Layout = null;
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

            .sidebar a {
                padding: 6px 8px 6px 16px;
                text-decoration: none;
                font-size: 20px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: #f1f1f1;
                }

        .main {
            margin-left: 240px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="#"><i class="glyphicon glyphicon-home"></i> Ana Sayfa</a>
        <a href="/Kategori/Index/"><i class="glyphicon glyphicon-list"></i> Kategoriler</a>
        <a href="/Kitap/Index/"><i class="glyphicon glyphicon-book"></i> Kitaplar</a>
        <a href="/Yazar/Index/"><i class="glyphicon glyphicon-pencil"></i> Yazarlar</a>
        <a href="/Uye/Index/"><i class="glyphicon glyphicon-user"></i> Üyeler </a>
        <a href="/Personel/Index/"><i class="glyphicon glyphicon-lock"></i> Personeller </a>
        <a href="/Odunc/OduncVer/"><i class="glyphicon glyphicon-circle-arrow-right"></i> Ödünç Kitap Ver </a>
        <a href="/Odunc/Index/"><i class="glyphicon glyphicon-circle-arrow-left"></i> Ödüç Kitap Al </a>
        <a href="/Duyuru/Index/"><i class="glyphicon glyphicon-bell"></i> Duyurular </a>
        <a href="/istatistik/Index/"><i class="glyphicon glyphicon-signal"></i> İstatistikler </a>
        <a href="/istatistik/Hava/"><i class="glyphicon glyphicon-cloud"></i> Hava Raporu </a>
        <a href="/istatistik/HavaKart/"><i class="glyphicon glyphicon-duplicate"></i> Hava Kartları </a>
        <a href="/Isemler/Index/"><i class="glyphicon glyphicon-dashboard"></i> İşlemler </a>
        <a href="/istatistik/Galeri/"><i class="glyphicon glyphicon-picture"></i> Galeri </a>
        <a href="/istatistik/LinqKart/"><i class="glyphicon glyphicon-bookmark"></i> Linq Kartlar </a>
        <a href="/Vitrin/Index/"><i class="glyphicon glyphicon-gift"></i> Vitrin </a>
        <a href="/Grafik/Index/"><i class="glyphicon glyphicon- glyphicon-cd"></i> Grafikler </a>
        <a href="/Panelim/LogOut/"><i class="glyphicon glyphicon-cog"></i> Çıkış Yap </a>

        <a href="#"><i class="glyphicon glyphicon-share-alt"></i> Çıkış </a>
    </div>

    <div class="main">
        @RenderBody()
    </div>

</body>
</html>

