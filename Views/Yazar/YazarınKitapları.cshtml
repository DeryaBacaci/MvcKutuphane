@using MvcKutuphane.Models.Entity
@model List<TBLKITAP>
@{
    ViewBag.Title = "YazarınKitapları";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Yazarı:<strong style="color:red"> @ViewBag.yazaradsoyad </strong></h2>
<br />

<table class="table table-striped" >
    <tr>
        <th>ID</th>
        <th>KİTAP ADI</th>
        <th>KATEGORİ</th>
        <th>YAYINEVİ</th>
    </tr>   
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td>@x.TBLKATEGORI.AD</td>
            <td>@x.YAYINEVI</td>
        </tr>
    }
</table>
